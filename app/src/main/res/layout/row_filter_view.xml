<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapFilterItem"
    android:layout_width="70dp"
    android:layout_height="80dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp">
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/imgFilterView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:siRadius="5dp"
        tools:ignore="MissingConstraints" />
    <TextView android:textSize="8dp"
        android:textColor="@color/text_color_edit"
        android:gravity="center" android:id="@+id/txtFilterName"
        android:padding="4dp" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgFilterView"/>
</androidx.constraintlayout.widget.ConstraintLayout>