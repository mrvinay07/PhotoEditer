<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#7d000000" android:endColor="@android:color/transparent" android:angle="90"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/collage_bg"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>